<h1>Listing people</h1>

<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Birthdate</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @people.each do |person| %>
  <tr>
    <td><%= person.FirstName %></td>
    <td><%= person.LastName %></td>
    <td><%= person.Birthdate %></td>
    <td><%= link_to 'Show', address_person_path(person.address,person) %></td>
    <td><%= link_to 'Edit', edit_address_person_path(person.address,person) %></td>
    <td><%= link_to 'Destroy', address_person_path(person.address,person), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

